{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": [
        "src/**/*", 
        "api/**/*"
    ],
    "exclude": [
        "node_modules", 
        "**/*.spec.ts", 
        "dist"
    ]
}